<Window x:Class="GbLive.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:GbLive.Converters"
        xmlns:gb="clr-namespace:GbLive.GiantBomb"
        xmlns:viewModels="clr-namespace:GbLive.ViewModels"
        xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        x:Name="window"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">

    <Window.DataContext>
        <viewModels:MainWindowViewModel x:Name="viewModel" />
    </Window.DataContext>

    <Window.Style>
        <Style TargetType="{x:Type Window}">
            <Setter Property="Title" Value="GB Live" />
            <Setter Property="Background" Value="Black" />
            <Setter Property="Width" Value="620" />
            <Setter Property="SizeToContent" Value="Height" />
            <Setter Property="ResizeMode" Value="CanMinimize" />
            <Setter Property="WindowStyle" Value="SingleBorderWindow" />
        </Style>
    </Window.Style>

    <Window.Resources>
        <CollectionViewSource Source="{Binding Path=Events}"
                              x:Key="eventsSortedByTime"
                              IsLiveSortingRequested="True">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Time" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <Style TargetType="{x:Type Label}" x:Key="LabelLiveStyle" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="Opacity" Value="1.0" />
            <Setter Property="FontSize" Value="26" />
            <Setter Property="Foreground" Value="Green" />
        </Style>

        <Style TargetType="{x:Type Label}" x:Key="LabelOfflineStyle" BasedOn="{StaticResource {x:Type Label}}">
            <Setter Property="Opacity" Value="0.6" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="Red" />
        </Style>

        <converters:BooleanToLiveStatusConverter x:Key="liveStatusConverter"
                                                 True="{Binding Source={x:Static gb:Settings.IsLiveMessage}}"
                                                 False="{Binding Source={x:Static gb:Settings.IsNotLiveMessage}}" />

        <converters:BooleanToStyleConverter x:Key="labelStyleConverter"
                                            True="{StaticResource LabelLiveStyle}"
                                            False="{StaticResource LabelOfflineStyle}" />
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               HorizontalContentAlignment="Center"
               Content="{Binding Path=IsLive, Converter={StaticResource liveStatusConverter}}"
               ToolTip="{Binding Path=LiveShowName}"
               Style="{Binding Path=IsLive, Converter={StaticResource labelStyleConverter}}"
               Name="LiveLabel"
               MouseDoubleClick="LiveLabel_MouseDoubleClick" />

        <ItemsControl Grid.Row="1"
                      ItemsSource="{Binding Source={StaticResource eventsSortedByTime}}"
                      Name="EventList"
                      MouseDoubleClick="EventList_MouseDoubleClick">
            <ItemsControl.Template>
                <ControlTemplate>
                    <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                                  VerticalScrollBarVisibility="Auto">
                        <ItemsPresenter />
                    </ScrollViewer>
                </ControlTemplate>
            </ItemsControl.Template>
        </ItemsControl>
    </Grid>
</Window>